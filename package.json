{
  "name": "@devoxa/flocky",
  "description": "A utility library with clarity and efficiency at the core. 0 dependencies.",
  "version": "2.0.0",
  "main": "dist/index.js",
  "module": "dist/esm/index.js",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/devoxa/flocky"
  },
  "scripts": {
    "test": "jest",
    "benchmark": "run(){ ts-node -O '{\"module\":\"commonjs\"}' src/$1/$1.benchmark.ts; }; run",
    "format": "prettier --ignore-path='.gitignore' --list-different --write .",
    "format:check": "prettier --ignore-path='.gitignore' --check .",
    "lint": "eslint --ignore-path='.gitignore' '{src,tests}/**/*.ts'",
    "build": "yarn build:esbuild && yarn build:docs",
    "build:esbuild": "rm -rf dist/ && node esbuild.js && tsc --emitDeclarationOnly",
    "build:docs": "ts-node -O '{\"module\":\"commonjs\"}' src/generateDocs.ts",
    "preversion": "yarn build"
  },
  "eslintConfig": {
    "extends": "@devoxa"
  },
  "prettier": "@devoxa/prettier-config",
  "devDependencies": {
    "@devoxa/eslint-config": "3.0.11",
    "@devoxa/prettier-config": "2.0.2",
    "@swc/core": "1.3.96",
    "@swc/jest": "0.2.29",
    "@types/benchmark": "2.1.5",
    "@types/jest": "29.5.7",
    "@types/lodash": "4.14.200",
    "@types/node": "18.18.9",
    "@types/pako": "2.0.2",
    "benchmark": "2.1.4",
    "esbuild": "0.19.5",
    "eslint": "8.53.0",
    "fast-glob": "3.3.2",
    "fast-memoize": "2.5.2",
    "filesize": "10.1.0",
    "jest": "29.7.0",
    "jest-environment-jsdom": "29.7.0",
    "lodash": "4.17.21",
    "pako": "2.1.0",
    "prettier": "3.0.3",
    "terser": "5.24.0",
    "ts-node": "10.9.1",
    "typescript": "5.2.2"
  },
  "publishConfig": {
    "access": "public"
  },
  "volta": {
    "node": "18.18.2"
  }
}
